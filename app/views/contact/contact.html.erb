
<% if @contact.errors.any? %>
  <div class="alert-danger">
    <ul>
    <% @contact.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @contact, :url => contact_path, :html => {:class => "form"} do |f| %>
  <div class="form-group">
    <label>Name</label>
    <%= f.text_field :name, {'aria-required' => true, :class => 'form-control'} %>
  </div>
  <div class="form-group">
  <label>Email</label>
    <%= f.email_field :email, :class => 'form-control' %>
  </div>
  <div class="form-group">
  <label>Message</label>
    <%= f.text_area :message, :class => 'form-control' %>
  </div>
  <%= f.submit "Contact", :class => 'btn btn-danger' %>
<% end %>