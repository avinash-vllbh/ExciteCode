<h2>Add a new category</h2>
<%= form_for @category, :url => categories_path, :html => {:class => "form"} do |f| %>
  <div class="form-group">
    <label>Name</label>
    <%= f.text_field :name, :class => 'form-control' %>
  </div>
  <%= f.submit "Add Category", :class => 'btn btn-danger' %>
<% end %>