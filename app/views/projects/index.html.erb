<div id="projects">
  <h3>Open Source Projects</h3>
  <% @projects.each do |project| %>
    <div class="project-container" style = "width: 33%">
      <h4><%= project.title %></h4>
      <p><%= project.description %></p>
      <div class="actions">
        <% unless project.github.nil? %>
          <%= link_to "View Demo", project_path(project.slug), class: "btn btn-danger btn-sm demo" %>
        <% end %>
        <% unless project.github.nil? %>
          <a href="#" class="btn btn-default btn-sm"><i class="fa fa-github" style = "vertical-align: middle;"></i>&nbsp;View on Github</a>
        <% end %>
      </div>
    </div>
  <% end %>
</div>