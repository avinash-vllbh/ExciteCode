<div id = "blog-content-wrapper">
  <div class = "blog-title-section">
    <%= @blog.title %>
  </div>
  <p>
    <%= @blog.body %>
  </p>
</div>
<h4>Comments</h4>
  <% @blog.comments.each do |comment| %>
    <div class = "comment-wrapper">
      <div class = "clearfix">
        <strong><%= comment.posted_by %></strong>
        <p style = "margin-left: 10px">
          <%= comment.body %>
        </p>
        <div class = "comment-post-date"><i>-- posted on <%= comment.created_at.to_date.to_formatted_s(:rfc822) %></i></div>
      </div>
    </div>
  <% end %>

<h4>Add a comment:</h4>
<%= form_for [@blog, @blog.comments.build] , :html => {:class => "form"}  do |f| %>
  <div class="form-group">
    <label></label>
      <%= f.text_area :body, {:class => 'form-control'} %>
  </div>
  <div class="form-group">
    <label>Posted by</label>
      <%= f.text_field :posted_by, {:class => 'form-control'} %>
  </div>

    <%= f.submit "Comment", :class => 'btn btn-danger' %>
  </p>
<% end %>